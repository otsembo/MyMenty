<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edt_auth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/edt_auth_padd</item>
    </style>

    <style name="edt_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_divider</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="txt_navigate_auth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dark_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtAppSubTitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:padding">5sp</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>